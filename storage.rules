rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for simplicity in this prototype
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the "uploads" directory
    match /uploads/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
